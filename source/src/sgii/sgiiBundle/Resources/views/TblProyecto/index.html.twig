{% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_proyectos' %}
    {% include '::menu_principal.html.twig' %}
{% endblock menu %}

{% block body %}
	<div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-list-alt"></i> Proyectos</h2>
                <div class="box-icon">
                    <a href="{{ path('proyectos_new') }}" class="btn btn-round btn-text"><i class="icon-plus"></i> Nuevo</a>
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                {% if entities %}
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                {#
                                    <th>Id</th>
                                    <th>Descripcion</th>
                                    <th>Problema</th>
                                    <th>Conclusiones</th>
                                    <th>Demostraciones</th>
                                    <th>Recomendaciones</th>
                                    <th>Creador</th>
                                #}
                                <th>Nombre</th>
                                <th>Fecha creación</th>
                                <th>Estado</th>
                                <th>Estado del proyecto</th>
                                <th>Tipo de investigación</th>
                                <th>Linea de investigación</th>
                                <th style='text-align:center;'>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    {#
                                        <td><a href="{{ path('proyectos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.proDescripcion }}</td>
                                        <td>{{ entity.proProblema }}</td>
                                        <td>{{ entity.proConclusiones }}</td>
                                        <td>{{ entity.proDemostraciones }}</td>
                                        <td>{{ entity.proRecomendaciones }}</td>
                                        <td>{{ entity.estadoProyectoId }}</td>
                                        <td>{{ entity.tipoInvestigacionId }}</td>
                                        <td>{{ entity.lineaInvestigacionId }}</td>
                                        <td>{{ entity.usuarioId }}</td>
                                        <td>{% if entity.proFechaCreacion %}{{ entity.proFechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    #}
                                    <td>{{ entity.proNombre }}</td>
                                    <td style='text-align:center;'>
                                        {% if entity.proEstado == 1 %}
                                            <span class="label label-success">Activo</span>
                                        {% else %}
                                            <span class="label">Inactivo</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ entity.eprEstadoProyecto }}</td>
                                    <td>{{ entity.tinNombreTipo }}</td>
                                    <td>{{ entity.linNombreInvestigacion }}</td>
                                    <td>{{ entity.usuApellido ~ ' ' ~ entity.usuNombre }}</td>
                                    <td class="center" style="font-size: 10px; width: 95px;text-align:center;">
                                        <a class="btn btn-success btn-mini" href="{{ path('proyectos_show', {'id': entity.id }) }}" data-rel="tooltip" title="Ver">
                                            <i class="icon-zoom-in icon-white"></i>        
                                        </a>
                                        <a class="btn btn-info btn-mini" href="{{ path('proyectos_edit', {'id': entity.id }) }}" data-rel="tooltip" title="Editar">
                                            <i class="icon-edit icon-white"></i>            
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                     </table>
                {% else %}
                    No se ha registrado ningún proyecto
                {% endif %}
			</div>
		</div>
	</div>
{% endblock %}