 {% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_proyectos' %}
    {% include '::menu_principal.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-book"></i> Editar objetivo</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content" style='padding-top:30px;'>
                <form class="form-horizontal" action="{{ path('objetivo_edit', {'proyectoId': proyectoId, 'id': entity.id }) }}" method="POST" {{ form_enctype(form) }}>
                    <fieldset>
                        <div class="control-group row-fluid">
                            <label class="control-label span2" for="typeahead">Nombre: </label>
                            <div class="controls span10">{{ form_widget(form.objObjetivo, {'attr': {'class':'span10'}} ) }}</div>
                        </div>
                        <div class="control-group row-fluid">
                            <label class="control-label span2" for="typeahead">Estado: </label>
                            <div class="controls span10">{{ form_widget(form.objEstado, {'attr': {'class':'span10'}} ) }}</div>
                        </div>
                            
                        {{ form(form) }}
                        {{ form_errors(form) }}
                        {{ form_widget(form._token) }}
                        <div class="form-actions center">
                            {% if permisoEdicion %}
                                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            {% endif %}
                            <a href="{{ path('proyectos_show', {'id': proyectoId }) }}" class="btn">Cancelar</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>                
    </div>
{% endblock %}