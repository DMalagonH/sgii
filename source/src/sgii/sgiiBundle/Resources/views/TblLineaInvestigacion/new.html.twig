{% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_linea_investigacion' %}
    {% include '::menuhorizontal.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-list-alt"></i> Nueva línea de investigación</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content" style='padding-top:30px;'>
                <form class="form-horizontal" action="{{ path('lineainvestigacion_new') }}" method="POST" {{ form_enctype(form) }}>
                    <fieldset>
                        <div class="control-group row-fluid">
                            <label class="control-label span2" for="typeahead">Nombre </label>
                            <div class="controls span10">
                                {{ form_widget(form.linNombreInvestigacion, {'attr': {'class':'span10'}} ) }}
                            </div>
                        </div>
                        <div class="control-group row-fluid">
                            <label class="control-label span2">Activo </label>
                            <div class="controls span10">
                                {{ form_widget(form.linEstado, {'attr': {}} ) }}{# 'class':'span10 iphone-toggle', "data-no-uniform":"true" #}
                            </div>
                        </div>
                        {{ form_errors(form) }}
                        {{ form_widget(form._token) }}
                        <div class="form-actions center">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a href="{{ path('lineainvestigacion') }}" class="btn">Cancelar</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}