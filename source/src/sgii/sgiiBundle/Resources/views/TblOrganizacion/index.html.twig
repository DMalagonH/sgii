{% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_organizaciones' %}
    {% include '::menu_principal.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-list-alt"></i> Organizaciones</h2>
                <div class="box-icon">
                    <a href="{{ path('organizacion_new') }}" class="btn btn-round btn-text"><i class="icon-plus"></i> Nuevo</a>
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
            {% if entities %}
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            {#<th style='text-align:center;'>Descripción</th>#}
                            <th>Sitio web</th>
                            <th style='text-align:center;'>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.orgNombre }}</td>
                                    {#<td>{{ entity.orgDescripcion }}</td>#}
                                    <td>{{ entity.orgSitioWeb }}</td>
                                    <td style='text-align:center;'>
                                        <a class="btn btn-success" href="{{ path('organizacion_show', { 'id': entity.id }) }}">
                                            <i class="icon-zoom-in icon-white"></i>  Ver
                                        </a>
                                        <a class="btn btn-info" href="{{ path('organizacion_edit', { 'id': entity.id }) }}">
                                            <i class="icon-edit icon-white"></i> Editar
                                        </a>
                                        {#<a class="btn btn-danger" href="#">
                                            <i class="icon-trash icon-white"></i> Delete
                                        </a>#}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    No se ha registrado ningúna organización
                {% endif %}
            </div>
        </div><!--/span-->
    </div><!--/row-->
{% endblock %}