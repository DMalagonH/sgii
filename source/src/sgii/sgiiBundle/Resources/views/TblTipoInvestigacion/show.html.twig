{% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_tipo_investigacion' %}
    {% include '::menu_admin.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-list-alt"></i> Detalles del tipo de investigación</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content" style='padding-top:30px;'>
                <fieldset>
                    <div class="control-group row-fluid">
                        <label class="control-label span2 textRight">Nombre </label>
                        <div class="controls span10">
                            {{ entity.tinNombreTipo }}
                        </div>
                    </div>
                    <div class="control-group row-fluid">
                        <label class="control-label span2 textRight">Activo </label>
                        <div class="controls span10">
                            {% if entity.tinEstado == 1 %}
                                <span class="label label-success">Activo</span>
                            {% else %}
                                <span class="label">Inactivo</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-actions center">
                        <a href="{{ path('tipoinvestigacion_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                        <div style='display:inline-block;'>{{ form(delete_form, {'attr':{'id':'formdeleteti'}}) }}</div>
                        <a href="{{ path('tipoinvestigacion') }}" class="btn">Volver</a>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
{% endblock body %}
    
{% block script %}
    <script>
    // Confirmacion de eliminar un tipo de investigacion
    $('.confirmtp').click(function(){
        if (confirm('¿Desea eliminar este tipo de investigación?')) {
            $('#formdeleteti').submit();
        }
    });
    </script>
{% endblock script %}