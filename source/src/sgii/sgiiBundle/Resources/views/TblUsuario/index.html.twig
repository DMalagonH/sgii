{% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_usuarios' %}
    {% include '::menu_principal.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-user"></i> Usuarios</h2>
                <div class="box-icon">
                    <a href="{{ path('usuarios_new') }}" class="btn btn-round btn-text"><i class="icon-plus"></i> Nuevo</a>
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content">
                {% if entities %}
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Cedula</th>
                                <th>Fecha de creación</th>
                                <th>Email</th><!-- log -->
                                <th>Estado</th>
                                <th>Cargo</th>
                                <th>Departamento</th>
                                <th>Organizacion</th>
                                <th style='text-align:center;'>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.usuNombre }}</td>
                                    <td>{{ entity.usuCedula }}</td>
                                    <td>{% if entity.usuFechaCreacion %}{{ entity.usuFechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ entity.usuLog }}</td>
                                    <td style='text-align:center;'>
                                        {% if entity.usuEstado == 1 %}
                                            <span class="label label-success">Activo</span>
                                        {% else %}
                                            <span class="label">Inactivo</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ entity.carNombre }}</td>
                                    <td>{{ entity.depNombre }}</td>
                                    <td>{{ entity.orgNombre }}</td>
                                    <td style='text-align:center;'>
                                        <a class="btn btn-success" href="{{ path('usuarios_show', { 'id': entity.id }) }}">
                                            <i class="icon-zoom-in icon-white"></i>  Ver
                                        </a>
                                        <a class="btn btn-info" href="{{ path('usuarios_edit', { 'id': entity.id }) }}">
                                            <i class="icon-edit icon-white"></i> Editar
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    No se ha registrado ningún usuario
                {% endif %}
            </div>
        </div><!--/span-->
    </div><!--/row-->    
{% endblock body %}