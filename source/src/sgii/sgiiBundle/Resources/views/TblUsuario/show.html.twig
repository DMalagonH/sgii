{% extends '::base.html.twig' %}

{% block menu %}
    {% set origen = 'acceso_usuarios' %}
    {% include '::menu_principal.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-user"></i> Detalles del usuario</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                </div>
            </div>
            <div class="box-content" style='padding-top:30px;'>
                <table class="table table-bordered table-striped">
                    <tr>
                        <td rowspan="10" style="width:240px;">
                            <img class="dashboard-avatar" alt="Usman" src="{{ gravatar(entity.usuLog, 200) }}" style="width:200px; height: 200px;">
                        </td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Apellido:</b></td>
                        <td>{{ entity.usuApellido }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Nombre:</b></td>
                        <td>{{ entity.usuNombre }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Cédula:</b></td>
                        <td>{{ entity.usuCedula }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Registrado desde:</b></td>
                        <td>{{ entity.usuFechaCreacion|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Correo electrónico:</b></td>
                        <td>{{ entity.usuLog }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Organización:</b></td>
                        <td>{{ entity.orgNombre|default('No especificado') }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Cargo:</b></td>
                        <td>{{ entity.carNombre|default('No especificado') }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Departamento:</b></td>
                        <td>{{ entity.depNombre|default('No especificado') }}</td>
                    </tr>
                    <tr>
                        <td class="td-label"><b>Estado:</b></td>
                        <td>
                            {% if entity.usuEstado == 1 %}
                                <span class="label label-success">Activo</span>
                            {% else %}
                                <span class="label">Inactivo</span>
                            {% endif %}
                        </td>
                    </tr>
                </table>
                
                <div class="form-actions center">
                    <a href="{{ path('usuarios_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                    <div style='display:inline-block;'>{{ form(delete_form, {'attr':{'id':'formdelete'}}) }}</div>
                    <a href="{{ path('usuarios') }}" class="btn">Volver</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>
        // Confirmacion de eliminar un tipo de investigacion
        $('.confirm').click(function(){
            if (confirm('¿Desea eliminar este usuario?')) {
                $('#formdelete').submit();
            }
        });
    </script>
{% endblock script %}
